{
  "env": {
    "ENABLE_LSP_TOOL": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Skill|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/usage-log.js",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/usage-log.js",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
