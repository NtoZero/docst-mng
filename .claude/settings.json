{
  "env": {
    "ENABLE_LSP_TOOL": true
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/lint-format.js\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
